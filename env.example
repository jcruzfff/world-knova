# Knova Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# World ID Configuration (REQUIRED for World Mini-App)
NEXT_PUBLIC_WLD_APP_ID=your_world_app_id
WORLD_APP_SECRET=your_world_app_secret

# NextAuth Secret (REQUIRED for custom sessions)
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Deployment URL (REQUIRED for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === World ID Configuration ===
WORLD_ID_APP_ID="app_your_app_id_here"
WORLD_ID_ACTION="your-action-name"

# === World Chain Configuration ===
WORLD_CHAIN_RPC="https://worldchain-mainnet.g.alchemy.com/public"
WORLD_CHAIN_CHAIN_ID="480"

# === Smart Contract Addresses ===
KNOVA_FACTORY_ADDRESS=""
KNOVA_VAULT_ADDRESS=""

# === Oracle Configuration ===
BILLBOARD_API_KEY=""
COINGECKO_API_KEY=""
SPORTRADAR_API_KEY=your_sportradar_api_key

# === File Upload Configuration ===
NEXT_PUBLIC_MAX_FILE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# === Development ===
NODE_ENV="development"
NEXT_PUBLIC_ENABLE_ERUDA=false
NEXT_PUBLIC_DEBUG_MODE=false

# === Analytics (Optional) ===
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id

# === Error Monitoring (Optional) ===
SENTRY_DSN=your_sentry_dsn

